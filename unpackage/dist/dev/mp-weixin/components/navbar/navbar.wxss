.navbar .navbar-fixed {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9999999;
  background-color: skyblue;
}
.navbar .navbar-fixed .navbar-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.navbar .navbar-fixed .navbar-content .navbar-search {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 24rpx;
  padding: 10rpx;
  box-sizing: border-box;
}
.navbar .navbar-fixed .navbar-content .navbar-search text {
  font-size: 24rpx;
  margin-left: 20rpx;
}

