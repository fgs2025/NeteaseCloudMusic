.swiper {
  height: 300rpx;
}
.swiper .item-box {
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}
.swiper .item-box .swiper-item {
  height: 100%;
  border-radius: 24rpx;
  position: relative;
  overflow: hidden;
}
.swiper .item-box .swiper-item image {
  width: 100%;
  height: 100%;
}
.swiper .item-box .swiper-item .typeTitle {
  position: absolute;
  bottom: 0;
  right: 0;
  padding: 10rpx;
  font-size: 24rpx;
  color: #fff;
  border-top-left-radius: 24rpx;
}

